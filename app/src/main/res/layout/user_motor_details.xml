<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/sky_blue"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Motorcycle Details"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            ></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/details_img_user_motor"
                android:layout_width="170dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_height="170dp"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand : "
                android:textSize="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/details_lblbrand_user_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:text="YAMAHA"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model : "
                android:textSize="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/details_lblmodel_user_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:text="MIO 125i"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : "
                android:textSize="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/details_lblprice_user_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:text="Php 100"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stocks : "
                android:textSize="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/details_lblstocks_user_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:text="2"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_margin="25dp">
            <Button
                android:id="@+id/details_btn_add_cart_user_motor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add to cart"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>